" ~/.config/vim/config/helix.vim

" HELIX KEYBINDS

" helper
nnoremap _ <Nop>

" basic
nnoremap x V
vnoremap x j

nnoremap d x
vnoremap d x

" goto mode
nnoremap gh 0
nnoremap gl $
nnoremap gs ^
nnoremap g. gm


" match mode
noremap miw viw
noremap maw vaw

nnoremap % ggVG

nnoremap Q q_
nnoremap q @_
